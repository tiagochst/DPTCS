exo2 <- function (){
  mydata <- read.table('http://perso.telecom-paristech.fr/~mahrsi/cours/datamining/data/airquality.dat',header = TRUE)
  % help(airquality)
  summary(mydata)
  mean(mydata$Temp)
  median(mydata$Temp)
  sd(mydata$Temp) % ecart type
  quantile(mydata$Temp)
  range(mydata$Temp)

  % Extraire
  mydata[2,]
  mydata[,3]
  mydata[c(1,4,7),]
  mydata[2:5,]
  mydata[, -c(1,2)]
  mydata[mydata$Temp>70,]
  hist(mydata$Temp,nclass =15)
}

ecartType <- function(donnes){
 N <- length(donnes)
 dc <- donnes - mean(donnes)
 return (sqrt(sum(dc^2)/(N-1)))
} 


factrec <- function(n){
  if(n==1)
    return (1)
  return (factrec(n-1)*n)
}

fact <- function(n){
  fact = 1
  while(n!=1){
    fact=fact*n
    n = n-1
    }
  return (fact)
}

sumInt <- function(n){
  sum = 0
  for(i in 0:n){
    sum = sum + i
  }
  return (sum)
}



prime <- function(n){
  if(n<2)
    return (FALSE)
  
  div = 0

  for(i in 1:sqrt(n)){
    if(n%%i==0)
      div = div + 1
    if(div>1)
      return (FALSE)
  }
  return (TRUE)
}

allprimes <- function(){
  m <- matrix(c(1:100), nrow = 1, ncol = 100)
  apply(m,2 ,FUN = prime)
}

