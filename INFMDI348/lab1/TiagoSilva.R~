% Cours R

ex1 <- function () {
  myMatrix <- matrix (1:100, nrow = 10, ncol = 10, byrow = T)
  index <- myMatrix[seq(2,10,2),2] 
  result <- sum(index)
  print('My result is:')
  print(result)
}

